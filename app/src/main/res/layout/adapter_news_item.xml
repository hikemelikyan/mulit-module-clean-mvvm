<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bcg_list_item_rounded_11"
    android:padding="@dimen/view_size_2">

    <com.example.gsport24.shared.CircleShadowImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/view_size_9"
        android:layout_height="@dimen/view_size_11"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:cornerRadius="11dp"
        app:roundStyle="roundish"
        app:roundedCorners="all"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/photo"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/lorem"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignBottom="@id/photo"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/photo"
        android:gravity="center_vertical"
        android:text="12 Jan 2020"
        android:textColor="@color/white_66"
        android:textSize="@dimen/text_size_s" />

</RelativeLayout>