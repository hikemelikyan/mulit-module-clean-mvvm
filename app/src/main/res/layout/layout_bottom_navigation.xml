<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/dark_blue"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:weightSum="5"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/nav_item_1_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_home" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_1_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nav_item_1"
            android:layout_alignEnd="@id/nav_item_1"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_home" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_item_2_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_category" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_2_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nav_item_2"
            android:layout_alignEnd="@id/nav_item_2"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_category" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nav_item_3_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_notifications" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_3_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@id/nav_item_3"
            app:layout_constraintTop_toTopOf="@id/nav_item_3"
            app:srcCompat="@drawable/ic_notifications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nav_item_3"
            android:layout_alignEnd="@id/nav_item_3"
            android:layout_marginTop="-5dp"
            android:background="@drawable/bcg_badge_red_circle"
            android:gravity="center"
            android:padding="2dp"
            android:includeFontPadding="false"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xs"
            app:layout_constraintBottom_toTopOf="@id/nav_item_3"
            app:layout_constraintEnd_toEndOf="@id/nav_item_3"
            app:layout_constraintStart_toEndOf="@id/nav_item_3"
            app:layout_constraintTop_toTopOf="@id/nav_item_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/nav_item_4_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_profile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_4_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nav_item_4"
            android:layout_alignEnd="@id/nav_item_4"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_profile" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nav_item_5_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_menu" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nav_item_5_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nav_item_5"
            android:layout_alignEnd="@id/nav_item_5"
            android:layout_marginTop="3dp"
            android:alpha="0.2"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_menu" />

    </RelativeLayout>

</LinearLayout>