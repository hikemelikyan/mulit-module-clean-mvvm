<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPassportImage"
        android:layout_width="@dimen/view_size_9"
        android:layout_height="@dimen/view_size_9"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="45"
        app:layout_constraintEnd_toEndOf="@id/ivPassportImage"
        app:layout_constraintTop_toTopOf="@id/ivPassportImage"
        app:srcCompat="@drawable/ic_plus"
        app:tint="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>